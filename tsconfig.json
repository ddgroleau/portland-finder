{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "strict": true,
        "types": ["vite/client"],
        "paths": {
            "@/*": [ "./resources/js/*" ]
        }
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ]
}
